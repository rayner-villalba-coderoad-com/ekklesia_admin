{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "../out-tsc/app",
    "types": [],
    "paths": {
      "@env/*": ["environments/*"], // Set environment alias
      "@shared/*": ["app/shared/*"],
      "@services/*": ["app/services/*"],
      "@store/*": ["app/state/*"],
      "@components/*": ["app/layout/components/*"]
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
